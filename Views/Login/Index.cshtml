@{
    ViewData["Title"] = "Login";
}

<h2>Create</h2>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label for="user" class="control-label"></label>
                <input type="text" for="user" name="user" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Content" class="control-label"></label>
                <input type="password" for="email" name="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
